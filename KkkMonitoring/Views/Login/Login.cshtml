@model KkkMonitoring.Models.Entities.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/MasterPages/LoginMasterPage.cshtml";
}

@section contentArea
{
    <div class="content-wrap">
        <div class="login-wrapper container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="row form-group">
                        @using (Html.BeginForm("SignIn", "Login"))
                        {
                            <div class="row">
                                <div class="col-md-12" id="error">
                                    @(ViewData["SignInFail"] != null && (bool) ViewData["SignInFail"] ? "Пользователь с указанной почтой и паролем не найден." : String.Empty)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 user-data" id="email">
                                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @id = "email", @placeholder = "Электронная почта"})
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 user-data" id="password">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "Password", @id = "Password", @placeholder = "Пароль" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-7">
                                    <button class="btn btn-primary login-btn" type="submit">Войти</button>
                                </div>
                                <div class="col-md-5">
                                    <button class="btn btn-success login-btn" type="button" onclick="@("window.location.href='" + @Url.Action("SignUp", "Login") + "'");">Регистрация</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section cssArea
{
    <link href="~/Content/bootstrap-table.min.css" rel="stylesheet" type="text/css" />
}

@section scriptsArea
{
    <script src="~/Scripts/libs/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Scripts/libs/bootstrap-table/bootstrap-table-locale-all.min.js"></script>
}